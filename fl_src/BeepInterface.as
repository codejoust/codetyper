package  {	import flash.events.*;    import flash.external.ExternalInterface;    import flash.display.Sprite;    import flash.display.MovieClip;	public class BeepInterface extends Sprite {				public var beepPlayer:BeepGenerator;		private var soundon:Boolean = true;		public function BeepInterface() {						beepPlayer = new BeepGenerator();						offArrow.visible = !soundon;						speakerImg.mouseEnabled = true;			speakerImg.addEventListener(MouseEvent.CLICK, mouseHandler);						if (ExternalInterface.available) {                try {                    ExternalInterface.addCallback("makeNoise", makeNoise);                } catch (error:SecurityError) {                    trace("A SecurityError occurred: " + error.message + "\n");                } catch (error:Error) {                    trace("An Error occurred: " + error.message + "\n");                }            } else {                trace("External interface is not available for this container.");            }		}		private function updateArrow():void {			offArrow.visible = !soundon;		}		private function mouseHandler(evt:MouseEvent):void {			toggleSound(!soundon);		}		public function toggleSound(to:Boolean):void {			soundon = to;			updateArrow();		}		public function makeNoise():void {			if (soundon){				beepPlayer.sendBippity();			}		}	}	}